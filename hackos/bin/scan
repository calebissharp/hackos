#!/usr/bin/env python3
import argparse

def main():
    parser = argparse.ArgumentParser(description='Do a port scan of a host')
    parser.add_argument('host', type=str, help='Hostname to scan')

    args = parser.parse_args()

    if args.host:
        print(args.host)
    else:
        parser.print_help()

if __name__ == '__main__':
    main()
